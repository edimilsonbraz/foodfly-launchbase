<section class="container form">

    <div class="item">
        <h4>Nome</h4>
        <div class="input name">
            <input 
                type="text" 
                name="name" 
                placeholder="Nome do usuÃ¡rio" 
                value="{{ user.name }}" 
                required="required"
            >
        </div>
    </div>

    <div class="item">
        <h4>Email</h4>
        <div class="input email">
            <input 
                type="email" 
                name="email" 
                placeholder="Digite seu email" 
                value="{{ user.email }}" 
                onblur="Validate.apply(this, 'isEmail')"
            >
        </div>
    </div>

    <div class="input checkbox">
        <input 
            type="checkbox" 
            name="is_admin" 
            id="checkbox" 
            value="true" 
            {% if user.is_admin %} 
                checked="checked"
            {% endif %} 
        >
        <h4>Administrador</h4>
    </div>
</section>