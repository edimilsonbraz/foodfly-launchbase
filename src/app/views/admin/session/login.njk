{% extends "layoutLogin.njk" %}

<head>
    {% block head %}
        <meta charset="UTF8">
        {# <link rel="stylesheet" href="/styles/index.css"> #}
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
        <title>Foodfy Login</title>
    {% endblock %}

</head>

{% block content %}

    <section class="login content">
        <form method="POST" action="/admin/login">

            <div class="header">
                <a href="/">
                    <img src="/images/back.svg" alt="Voltar">
                </a>
                <i class="material-icons">account_circle</i>
                <h3>Iniciar Sess√£o</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <h4>Email</h4>
                    <div class="inputWithIcon">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite seu email" 
                            value="{{ user.email }}" 
                            onblur="Validate.apply(this, 'isEmail')" 
                            required="required"
                        >
                        <i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
                    </div>
                </div>

                <div class="item">
                    <h4>Senha</h4>
                    <div class="inputWithIcon">
                        <input 
                            type="password" 
                            name="password" 
                            placeholder="Digite sua senha" 
                            required="required"
                        >
                        <i class="fa fa-unlock fa-lg fa-fw" aria-hidden="true"></i>
                    </div>
                </div>
            </div>

            <div class="footer">
                <a href="forgot-password">Perdeu a senha ?</a>
                <button class="button" type="submit">Acessar</button>
            </div>

        </form>
    </section>

{% endblock content %}