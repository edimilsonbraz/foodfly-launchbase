{% extends "layoutLogin.njk" %}

<head>
    {% block head %}
        <meta charset="UTF8">
        <link rel="stylesheet" href="/styles/index.css">
        <title>Foodfy Login</title>
    {% endblock %}
</head>

{% block content %}

    <section class="login password content">

        <form method="POST" action="/admin/reset-password">

            <div class="header">
                <h3>Nova Senha</h3>
            </div>

            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
                </div>
            </div>

            <div class="item">
                <div>Nova senha</div>
                <div class="input">
                    <input type="password" name="password" placeholder="Digite sua nova senha">
                </div>
            </div>

            <div class="item">
                <div>Repetir senha</div>
                <div class="input">
                    <input type="password" name="password" placeholder="Repita a nova senha">
                </div>
            </div>

            <div class="footer">
                <button class="button" type="submit">Nova Senha</button>
            </div>
        </form>
    </section>

{% endblock content %}