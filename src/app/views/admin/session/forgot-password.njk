{% extends "layoutLogin.njk" %}

<head>
    {% block head %}
        <meta charset="UTF8">
        <link rel="stylesheet" href="/styles/index.css">
        <title>Foodfy Login</title>
    {% endblock %}
</head>

{% block content %}

    <section class="login password content">

        <form method="POST" action="/admin/forgot-password">

            <div class="header">
                <h3>Esqueceu a Senha?</h3>
            </div>

            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email para recuperar sua senha" 
                        value="{{ user.email }}" 
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>

            <div class="footer">
                <button class="button" type="submit">recuperar</button>
            </div>
        </form>
    </section>

{% endblock content %}