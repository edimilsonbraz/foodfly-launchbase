{% extends "layoutChefs.njk" %}


    <head>
        {% block head %}
            <meta charset="UTF8">
            <meta name="viewport" content="width=device-widht, initial-scale=1.0">
            
            <title>Foodfy</title>
        {% endblock %}
    </head>

    
{% block content %}
    <div class="content">
        <div class="container">

            <h2>Gerenciar Chefs</h2>

            <a class="buttons" href="/admin/chefs/create">Cadastrar chef</a>

                <div class="cards">
                    {% for chef in chefs %}
                        <div class="card-chefs">
                            <img class="img-chefs" src="{{ chef.avatar_url }}" alt="">
                            <div class="text">   
                            <span class="chef">{{ chef.name}}</span>
                            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                            </div> 
                        </div>
                    {% endfor %}
                </div>
        </div>
    </div>

{% endblock %}
    
    

   