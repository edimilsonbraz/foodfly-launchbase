{% extends "layoutChefs.njk" %}

{% block head %}
    <title>{{ chef.title }}</title>
{% endblock %}

{% block content %}

    <section class="content">
        <div class="card__title">
            <h2 class="title2">Chef: {{chef.name}}</h2>
            <a class="buttons" href="/admin/chefs/{{ chef.id}}/edit">Editar chef</a>
        </div>


        <div class="card__image">
            <img src="{{chef.avatar_url}}" alt="">
        </div>
        <div class="card__title">
            <h1>{{chef.name}}</h1>
            <p>{{chef.total_recipes}} Receita(s)</p>
        </div>

        <div class="recipe__content">

           <div class="cards">
                {% for recipe in recipes %}
                    <div class="card">
                        <img src="{{ recipe.image }}" alt="">
                        <h3>{{ recipe.title }}</h3>
                        <span class="autor">por {{ chef.name }}</span><br>
                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>                       
                    </div>
                {% endfor %}
            </div>   

        </div>

    </section>
    
{% endblock %}