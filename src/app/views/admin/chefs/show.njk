{% extends "layoutChefs.njk" %}

{% block head %}
    <title>{{ chef.title }}</title>
{% endblock %}

{% block content %}

    <section class="content">
        <div class="card__title">
            <h2 class="title2">Chef: {{chef.name}}</h2>
            <a class="buttons" href="/admin/chefs/{{ chef.id}}/edit">Editar chef</a>
        </div>


        <div class="card__image">
            <img src="{{chef.avatar_url}}" alt="">
        </div>
        <div class="card__title">
            <h1>{{chef.name}}</h1>
            <p>{{recipesByChef.total_recipes}} Receita(s)</p>
        </div>

        <div class="recipe__content">

            <h3>Receitas</h3>
           <div class="cards__recipes">
                {% for recipe in recipes %}
                    <div class="card__recipes">
                        <img src="{{ recipe.image }}" alt="">
                        <div class="card__text">
                            <h4>{{ recipe.title }}</h4>
                            <span class="autor">por {{ chef.name }}</span><br>
                            <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>  
                        </div>
                    </div>
                {% endfor %}
            </div>   

        </div>

    </section>
    
{% endblock %}