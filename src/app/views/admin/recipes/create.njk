{% extends "./layoutRecipes.njk" %}

<head>
    {% block head %}
        <meta charset="UTF8">
        <meta name="viewport" content="width=device-widht, initial-scale=1.0">
        <title>Foodfy - Create Recipes</title>
    {% endblock %}
</head>

{% block content %}
    <form class="content" method="POST" action="/admin/recipes" enctype="multipart/form-data">
        <div class="container-buttons">
            <h2>Criando Receita</h2>
            <button id="salvar" type="submit">Salvar receita</button>
        </div>

        <div class="container">
            {% include 'admin/recipes/fields.njk' %}
        </div>
    </form>
{% endblock %}

{% block script %}{% endblock script %}