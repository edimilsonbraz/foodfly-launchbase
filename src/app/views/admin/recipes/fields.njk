

     <div class="cards">
                <div class="card__form">

                    <div class="item">
                        <h3>Imagem da receita</h3>
                        <div id="images">
                            <div id="images-upload">
                                <input 
                                    id="images-input"
                                    type="file" 
                                    name="image" 
                                    multiple
                                    accept="image/*"
                                    onchange="ImagesUpload.handleFileInput(event)"
                                >
                                <div class="box">
                                    <p class="icon"><i class="material-icons">add_photo_alternate</i></p>

                                </div>
                            </div>

                            <div id="images-preview">
                                {% if files %}
                                    {% for image in files %}
                                        <div 
                                            class="image" 
                                            id="{{image.file_id}}" >
                                            <img src="{{image.src}}" alt="{{image.name}}">
                                            <i class="material-icons"
                                                onclick="ImagesUpload.removeOldImage(event)"
                                            >close</i>
                                        </div>
                                    {% endfor %}
                                    <input type="hidden" removed_files>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="item">
                        <h3>Nome da receita</h3>
                        <div id="titles">
                            <div class="title">
                                <input type="text" name="title" value=" {{ recipe.title }}">
                            </div>
                        </div>
                    </div>

                    <div class="item">
                        <h3>Chef</h3>
                            <select name="chef">
                                <option value="">Selecione um Chef</option>
                                {% for chef in chefs %}
                                    <option 
                                        value="{{chef.id}}" 
                                        placeholder="Selecione um chef"  
                                        {% if recipe.chef_id == chef.id %} selected {% endif %}>
                                        {{chef.name}}
                                    </option>
                                {% endfor %}
                            </select>
                    </div>

                    <div class="item">
                        <h3>Ingredientes</h3>
                        {% if recipe.ingredients %}
                            {% for ingredient in recipe.ingredients %}
                                <div id="ingredients">
                                    <div class="ingredient">
                                        <input type="text" name="ingredients[]" value="{{ingredient}}" placeholder="Ingrediente">
                                    </div>
                                </div>
                            {% endfor %} 
                        {% endif%}  
                        <button type="button" class="add-ingredient">Adicionar novo</button>
                    </div>

                    <div class="item">
                        <h3>Modo de preparo</h3>
                        {% if recipe.preparation %}
                            {% for preparation in recipe.preparation %}
                                <div id="preparations">
                                    <div class="preparation">
                                        <input type="text" name="preparation[]" value="{{preparation}}" placeholder="Preparation"> 
                                    </div>
                                </div>
                            {% endfor %} 
                        {% endif%} 
                        <button type="button" class="add-preparation">Adicionar novo</button>
                    </div>

                    <div class="item">
                        <h3>Informações adicionais</h3>
                        <div id="informations">
                            <div class="information">
                                <textarea name="information" value=" {{ recipe.information }}">{{ recipe.information }} 
                                </textarea>
                            </div>
                        </div>
                    </div>  

                </div>
            </div>
